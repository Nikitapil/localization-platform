generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id String @id @default(uuid())

  name String @unique

  users User[]

  langs Lang[]

  createdAt DateTime @default(now())

  updatedAt DateTime @updatedAt
}

model User {
  id String @id @default(uuid())

  email String @unique

  password String

  name String

  lastname String

  profile   Profile @relation(fields: [profileId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  profileId String

  texts     Text[]

  createdAt DateTime @default(now())

  updatedAt DateTime @updatedAt
}

model Lang {
  name String @unique

  profile   Profile @relation(fields: [profileId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  profileId String

  translations Translation[]
}

model Translation {
  id String @id @default(uuid())

  lang     Lang   @relation(fields: [langName], references: [name], onDelete: Cascade, onUpdate: Cascade)
  langName String

  text    Text   @relation(fields: [textKey], references: [key], onDelete: Cascade, onUpdate: Cascade)
  textKey String

  value String
}

model Text {
  key String @unique

  translations Translation[]

  updatedBy User   @relation(fields: [userId], references: [id])
  userId    String

  createdAt DateTime @default(now())

  updatedAt DateTime @updatedAt
}
