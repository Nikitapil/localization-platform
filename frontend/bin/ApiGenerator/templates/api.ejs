<%
const { utils, route, config, modelTypes } = it;
const { _, pascalCase, require } = utils;
const apiClassName = pascalCase(route.moduleName);
const routes = route.routes;
const dataContracts = _.map(modelTypes, "name");
const className = apiClassName + "Api"
%>

<% if (config.httpClientType === config.constants.HTTP_CLIENT.AXIOS) { %> import type { AxiosRequestConfig, AxiosResponse } from "axios"; <% } %>

import { HttpClient, type RequestParams, ContentType, HttpResponse } from "./<%~ config.fileNames.httpClient %>";
<% if (dataContracts.length) { %>
import type { <%~ dataContracts.join(", ") %> } from "./<%~ config.fileNames.dataContracts %>"
<% } %>;
import { useApi } from '../utils/useApi';

export class <%= className %><SecurityDataType = unknown><% if (!config.singleHttpClient) { %> extends HttpClient<SecurityDataType> <% } %> {
<% if(config.singleHttpClient) { %>
  http: HttpClient<SecurityDataType>;

  constructor (http: HttpClient<SecurityDataType>) {
    this.http = http;
  }
<% } %>

    <% for (const route of routes) { %>
        <%~ includeFile('./procedure-call.ejs', { ...it, route }) %>
    <% } %>
}

const instance = new <%= className %>()

export const use<%= className %> = () => {

   return {
    <% routes.forEach((routeItem, index) => { 
      const methodName = routeItem.operationId || routeItem.name || routeItem.raw.operationId;
      if (methodName) { %>
    <%= methodName %>: useApi(instance.<%= methodName %>)<%= index < routes.length - 1 ? ',' : '' %>
    <% } 
    }); %>
  };
};